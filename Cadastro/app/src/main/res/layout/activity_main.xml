<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Tirar Foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/camera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.464"/>
    <EditText
            android:layout_width="345dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="Nome"
            android:ems="10"
            android:id="@+id/nome"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.617"/>
    <EditText
            android:layout_width="345dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:text="E-mail"
            android:ems="10"
            android:id="@+id/email"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.7"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars" android:id="@+id/foto"
            tools:layout_editor_absoluteY="102dp" tools:layout_editor_absoluteX="141dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>